<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvRecentFoods"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/text_background"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="start|center_vertical"
        android:hint="Recent Foods"
        android:paddingStart="16dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRecentFoodCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="350 kcal"
        android:textAlignment="textEnd"
        android:textColor="@color/mid_grey"
        app:layout_constraintBottom_toBottomOf="@+id/tvRecentFoods"
        app:layout_constraintEnd_toEndOf="@+id/tvRecentFoods"
        app:layout_constraintTop_toTopOf="@+id/tvRecentFoods" />
</androidx.constraintlayout.widget.ConstraintLayout>