<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item android:left="0dp" android:right="0dp" android:top="5dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <solid android:color="@color/yellow_shadow" /> <!-- Darker yellow shadow -->
        </shape>
    </item>
    <!-- Button Layer -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <solid android:color="@color/primary_yellow_dark" /> <!-- Darker yellow for pressed state -->
        </shape>
    </item>
</layer-list>
